<% provide(:title, @user.name) %>
<br /><br /><br /><br />
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <section class="user_info">
            <table class="table table-hover">
          <tr class="info">
              <th>Name</th>
              <th>Room No.</th>
              <th>Events</th>
              <th>Email</th>
              <th></th>
              <th></th>
          </tr>
          <tr class="active"> 
              <td><%= @user.name %></td>
              <td><%= @user.room %></td>
              <td><% if @user.events.any? %>
                  <h3>Events (<%= @user.events.count %>)</h3>
                  <ol class="events">
                    <%= render @events %>
                  </ol>
                  <%= will_paginate @events %>
                <% end %></td>
              <td><%= @user.email %></td>
            <td><%= link_to "Edit", edit_user_path(@user) %>     </td>      
            <td><%= link_to "Delete", @user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
     </table>
    </section>
  </div>
</div>
